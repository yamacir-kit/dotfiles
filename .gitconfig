[user]
  name  = yamacir-kit
  email = httperror@404-notfound.jp

[pretty]
  preset = format:%C(yellow reverse) %h %C(green reverse) %an %C(reset)%C(cyan) %ar%C(red)%d%n> %C(bold)%w(0, 0, 2)%B%n

[alias]
  graph = log --graph --all --date=relative --pretty=preset

  # git remote rename [old-origin-name] [new-origin-name]
  # clone = clone --origin github --recurse-submodules

  stage = add
  unstage = reset HEAD

  commit = commit -v
  uncommit = reset --soft HEAD^

  revert = reset --hard HEAD^

  diff = diff --no-index
  apply = --git-dir= apply

[core]
  editor = vi
  pager = less -cm
  quotepath = false

[color]
  ui = auto

[merge]
  ff = false

[pager]
  branch = cat

[push]
  default = simple

[pull]
  rebase = true

[filter "lfs"]
  clean   = git-lfs clean -- %f
  process = git-lfs filter-process
  smudge  = git-lfs smudge -- %f
  required = true

[sendpack]
  sideband = false
